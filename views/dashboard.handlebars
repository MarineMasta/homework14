
{{#if posts.length}}
<section>
  <!--shows posts written by  author-->
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      {{> dashboard-postinfo post}}
    {{/each}}

</section>
{{/if}}

<!--option to create a new post-->
<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ Write a New Post</a></button>

<script src="/javascript/add-post.js"></script>